<script>
    function gcd(a, b) { return b ? gcd(b, a % b) : a; }

    function convert() {
        let cm = document.getElementById('cmInput').value;
        let out = document.getElementById('output');
        if (!cm || cm <= 0) { out.innerText = "0' 0\""; return; }

        let totalInches = cm / 2.54;
        let feet = Math.floor(totalInches / 12);
        let inchesOnly = Math.floor(totalInches % 12);
        
        // ROUND TO NEAREST 1/16th
        let sixteenths = Math.round((totalInches - Math.floor(totalInches)) * 16);

        if (sixteenths === 16) { 
            sixteenths = 0; 
            inchesOnly++; 
            if (inchesOnly === 12) { feet++; inchesOnly = 0; } 
        }

        let frac = "";
        if (sixteenths > 0) {
            let common = gcd(sixteenths, 16);
            frac = ` ${sixteenths/common}/${16/common}`;
        }
        out.innerText = `${feet}' ${inchesOnly}${frac}"`;
    }

    function clearInput() {
        document.getElementById('cmInput').value = '';
        document.getElementById('output').innerText = "0' 0\"";
        document.getElementById('cmInput').focus();
    }
</script>
